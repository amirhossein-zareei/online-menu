<%- include('./partials/head', { title: 'ArtaPack | حساب کاربری' }) %>

    <!-- ───── هدر ───── -->
    <header class="sticky top-0 z-50 bg-[#1f1f22] shadow-lg">
        <a href="/" class="absolute right-4 sm:right-6 top-1/2 -translate-y-1/2 text-white/90 hover:text-white transition-colors z-20 flex items-center gap-2"
            title="بازگشت به صفحه اصلی">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                stroke-linecap="round" stroke-linejoin="round">
                <line x1="19" y1="12" x2="5" y2="12" />
                <polyline points="12 19 5 12 12 5" />
            </svg>
            <span class="text-sm font-bold hidden sm:inline">بازگشت</span>
        </a>
        <div class="flex items-center justify-center py-5 sm:py-6 px-4 gap-3">
            <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-full bg-white shadow-lg flex items-center justify-center overflow-hidden">
                <img src="/images/generated-image.png" alt="لوگوی آرتاپک" class="w-full h-full object-cover">
            </div>
            <div class="text-center">
                <h1 class="text-white text-2xl sm:text-3xl font-black">حساب کاربری</h1>
                <p class="text-white/90 text-xs sm:text-sm font-medium mt-0.5">ArtaPack</p>
            </div>
        </div>
    </header>


    <!-- ───── محتوا ───── -->
    <main class="px-4 sm:px-6 lg:px-8 pt-6 sm:pt-8 pb-12 sm:pb-16 flex-1 bg-gray-50">

        <!-- لودینگ -->
        <div id="profileLoading" class="flex flex-col items-center justify-center py-16 sm:py-20">
            <div class="w-10 h-10 border-[3px] border-orange-200 border-t-orange-500 rounded-full animate-spin"></div>
            <p class="text-sm text-gray-500 mt-4 font-medium">در حال بارگذاری...</p>
        </div>

        <!-- محتوای اصلی -->
        <div id="profileContent" class="hidden max-w-2xl mx-auto space-y-5 sm:space-y-6" style="animation: fadeIn 0.5s ease both;">

            <!-- ───── کارت اطلاعات کاربری ───── -->
            <div class="bg-white rounded-2xl sm:rounded-3xl p-5 sm:p-7 shadow-md border border-gray-100">
                <div class="flex items-center gap-3 mb-6">
                    <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-orange-400 to-orange-600 flex items-center justify-center shadow-lg">
                        <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                            <circle cx="12" cy="7" r="4" />
                        </svg>
                    </div>
                    <h2 class="text-lg sm:text-xl font-black text-gray-800">اطلاعات حساب کاربری</h2>
                </div>

                <div class="space-y-4">
                    <!-- نام -->
                    <div class="flex items-center justify-between py-3 border-b border-gray-100">
                        <span class="text-xs sm:text-sm font-bold text-gray-500">نام و نام خانوادگی</span>
                        <span class="text-sm sm:text-base font-bold text-gray-800" id="profileName">—</span>
                    </div>
                    <!-- یوزرنیم -->
                    <div class="flex items-center justify-between py-3 border-b border-gray-100">
                        <span class="text-xs sm:text-sm font-bold text-gray-500">نام کاربری</span>
                        <span class="text-sm sm:text-base font-bold text-gray-800 flex items-center gap-1.5"
                        id="profileUsername" style="direction: ltr;">
                            <span>—</span>
                            <span class="text-orange-500 text-xs">@</span>
                        </span>
                    </div>
                    <!-- شماره تلفن -->
                    <div class="flex items-center justify-between py-3">
                        <span class="text-xs sm:text-sm font-bold text-gray-500">شماره تلفن</span>
                        <span class="text-sm sm:text-base font-bold text-gray-800" dir="ltr" id="profilePhone">—</span>
                    </div>
                </div>
            </div>

            <!-- ───── تغییر رمز ───── -->
            <div class="bg-white rounded-2xl sm:rounded-3xl p-5 sm:p-7 shadow-md border border-gray-100">
                <div class="flex items-center gap-3 mb-6">
                    <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center shadow-lg">
                        <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
                            <path d="M7 11V7a5 5 0 0 1 10 0v4" />
                        </svg>
                    </div>
                    <h2 class="text-lg sm:text-xl font-black text-gray-800">تغییر رمز عبور</h2>
                </div>

                <!-- پیام نتیجه -->
                <div id="passwordAlert" class="hidden mb-5 rounded-xl px-4 py-3.5 flex items-center gap-3"></div>

                <form id="changePasswordForm" class="space-y-4">
                    <!-- رمز فعلی -->
                    <div>
                        <label class="block text-xs sm:text-sm font-bold text-gray-600 mb-2">رمز عبور فعلی</label>
                        <div class="relative">
                            <span class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none">
                                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
                                    <path d="M7 11V7a5 5 0 0 1 10 0v4" />
                                </svg>
                            </span>
                            <input type="password" id="currentPassword" name="currentPassword" required
                                placeholder="رمز فعلی را وارد کنید" 
                                class="w-full pr-11 pl-11 py-3.5 bg-gray-50 border-2 border-gray-700 rounded-xl text-sm sm:text-base
                                   text-gray-800 placeholder-gray-400 outline-none font-medium transition-all duration-300
                                   focus:border-gray-900 focus:bg-white focus:shadow-lg focus:shadow-gray-900/10">
                            <button type="button" onclick="togglePassField('currentPassword', this)"
                                class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-orange-500 transition-colors">
                                <svg class="eye-off w-5 h-5" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round">
                                    <path
                                        d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94" />
                                    <path d="M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19" />
                                    <path d="M14.12 14.12a3 3 0 1 1-4.24-4.24" />
                                    <line x1="1" y1="1" x2="23" y2="23" />
                                </svg>
                                <svg class="eye-on w-5 h-5 hidden" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                                    <circle cx="12" cy="12" r="3" />
                                </svg>
                            </button>
                        </div>
                    </div>

                    <!-- رمز جدید -->
                    <div>
                        <label class="block text-xs sm:text-sm font-bold text-gray-600 mb-2">رمز عبور جدید</label>
                        <div class="relative">
                            <span class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none">
                                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M12 2L2 7l10 5 10-5-10-5z" />
                                    <path d="M2 17l10 5 10-5" />
                                    <path d="M2 12l10 5 10-5" />
                                </svg>
                            </span>
                            <input type="password" id="newPassword" name="newPassword" required
                                placeholder="رمز جدید را وارد کنید" 
                                class="w-full pr-11 pl-11 py-3.5 bg-gray-50 border-2 border-gray-700 rounded-xl text-sm sm:text-base
                                   text-gray-800 placeholder-gray-400 outline-none font-medium transition-all duration-300
                                   focus:border-gray-900 focus:bg-white focus:shadow-lg focus:shadow-gray-900/10">
                            <button type="button" onclick="togglePassField('newPassword', this)"
                                class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-orange-500 transition-colors">
                                <svg class="eye-off w-5 h-5" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round">
                                    <path
                                        d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94" />
                                    <path d="M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19" />
                                    <path d="M14.12 14.12a3 3 0 1 1-4.24-4.24" />
                                    <line x1="1" y1="1" x2="23" y2="23" />
                                </svg>
                                <svg class="eye-on w-5 h-5 hidden" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="1.8" stroke-linecap="round"
                                    stroke-linejoin="round">
                                    <path
                                        d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94" />
                                    <path d="M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19" />
                                    <path d="M14.12 14.12a3 3 0 1 1-4.24-4.24" />
                                    <line x1="1" y1="1" x2="23" y2="23" />
                                </svg>
                                <svg class="eye-on w-[16px] h-[16px] hidden" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="1.8" stroke-linecap="round"
                                    stroke-linejoin="round">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                                    <circle cx="12" cy="12" r="3" />
                                </svg>
                            </button>
                        </div>
                    </div>

                    <!-- تکرار رمز جدید -->
                    <div>
                        <label class="block text-xs sm:text-sm font-bold text-gray-600 mb-2">تکرار رمز جدید</label>
                        <div class="relative">
                            <span class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none">
                                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="20 6 9 17 4 12" />
                                </svg>
                            </span>
                            <input type="password" id="confirmPassword" name="confirmPassword" required
                                placeholder="رمز جدید را دوباره وارد کنید" class="w-full pr-11 pl-11 py-3.5 bg-gray-50 border-2 border-gray-700 rounded-xl text-sm sm:text-base
                                   text-gray-800 placeholder-gray-400 outline-none font-medium transition-all duration-300
                                   focus:border-gray-900 focus:bg-white focus:shadow-lg focus:shadow-gray-900/10">
                            <button type="button" onclick="togglePassField('confirmPassword', this)"
                                class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-orange-500 transition-colors">
                                <svg class="eye-off w-5 h-5" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round">
                                    <path
                                        d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94" />
                                    <path d="M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19" />
                                    <path d="M14.12 14.12a3 3 0 1 1-4.24-4.24" />
                                    <line x1="1" y1="1" x2="23" y2="23" />
                                </svg>
                                <svg class="eye-on w-5 h-5 hidden" viewBox="0 0 24 24" fill="none"
                                    stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                                    <circle cx="12" cy="12" r="3" />
                                </svg>
                            </button>
                        </div>
                    </div>

                    <!-- دکمه ثبت -->
                    <button type="submit" id="changePassBtn" class="w-full py-3 rounded-xl text-white font-extrabold text-[14px]
                           flex items-center justify-center gap-2 transition-all duration-300
                           bg-gradient-to-l from-blue-400 via-blue-500 to-blue-600
                           hover:shadow-lg hover:shadow-blue-500/30 hover:-translate-y-0.5
                           active:translate-y-0">
                        <span id="changePassText">تغییر رمز عبور</span>
                        <svg id="changePassSpinner" class="w-5 h-5 animate-spin hidden" viewBox="0 0 24 24" fill="none">
                            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="3" opacity=".25" />
                            <path d="M12 2a10 10 0 0 1 10 10" stroke="currentColor" stroke-width="3"
                                stroke-linecap="round" />
                        </svg>
                    </button>
                </form>
            </div>

            <!-- ───── دکمه خروج ───── -->
            <button onclick="logout()" id="logoutBtn" class="w-full py-3.5 rounded-2xl text-red-500 font-extrabold text-[14px]
                   bg-red-50 border-2 border-red-100
                   flex items-center justify-center gap-2
                   hover:bg-red-100 hover:border-red-200 transition-all duration-300
                   active:scale-[0.98]">
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                    stroke-linecap="round" stroke-linejoin="round">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                    <polyline points="16 17 21 12 16 7" />
                    <line x1="21" y1="12" x2="9" y2="12" />
                </svg>
                خروج از حساب
            </button>

        </div>
    </main>

    </div><!-- /app shell -->

    <script src="/js/profile.js"></script>
    </body>

    </html>