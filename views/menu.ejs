                <div class="flex flex-col items-center gap-6 sm:gap-8">
                    <!-- Categories Bar -->
                    <div class="sticky top-0 z-50 w-full py-3 sm:py-4 bg-gradient-to-b from-white via-white to-transparent backdrop-blur-sm">
                        <div class="max-w-7xl mx-auto px-4">
                            <div class="flex items-center gap-3 sm:gap-4 bg-white rounded-full p-2 sm:p-3 shadow-2xl" style="box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15), 0 0 20px rgba(0, 0, 0, 0.1);">
